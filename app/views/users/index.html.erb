
    <h3>Users</h3>
    <p id="notice"><%= notice %></p>
    <table class="table">
      <thead>
        <tr>
          <th>User name</th>
          <th>User dasherize vanity String</th>
          <th>User dasherize vanity url</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.dasherize_vanity %></td>
          <td><%= link_to 'Dasherize Vanity Url', user_path(user.dasherize_vanity), class: 'link' %></td>  
          <td>
              <%= link_to 'Show', user %>
              <%= link_to 'Edit', edit_user_path(user) %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>    

