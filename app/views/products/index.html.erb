<p id="notice"><%= notice %></p>

<h3>Products</h3>

<table class="table">
  <thead>
    <tr>
      <th>Product name</th>  
      <th>Product dasherize vanity String</th>
      <th>Product dasherize vanity url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_dasherize_vanity_url %></td>   
        <td><%= link_to 'Dasherize Vanity Url', product_path(product.product_dasherize_vanity_url), class: 'link' %></td>  
        <td>
          <%= link_to 'Show', product, class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
